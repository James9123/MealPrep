@{
}
<h1>Edit</h1>

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="custom-text">Update Meal Plan:</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Meal"></label>
            </div>
            <div class="col-6">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Notes"></label>
            </div>
            <div class="col-6">
                <input asp-for="Notes" class="form-control" />
            </div>
        </div>
        
        
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary form-control">Back to My Meals</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
